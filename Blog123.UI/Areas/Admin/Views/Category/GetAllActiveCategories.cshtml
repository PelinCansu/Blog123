@using Blog123.UI.Areas.Admin.ViewModels.CategoryVMs;

@{
    ViewData["Title"] = "GetAllCategories";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model List<CategoryListVM>

<div class="row">
    <div class="col-lg-12">
        <a class="btn btn-primary" style="color:azure; font-size:larger" asp-action="Create">Yeni Kategori Ekle</a>
    </div>

</div>

<br />
<div class="row">
    <div class="col-lg-12">
        <table class="table align-middle mb-0 bg-white">
            <thead class="bg-light">
                <tr>
                    <th>Kategori ID</th>
                    <th>Kategori Ad</th>
                    <th>Kategori Kod</th>
                    <th>Kategori Düzenle</th>
                    <th>Kategori Sil</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.Id">@item.Id</p>
                            <p class="text-muted mb-0"></p>
                        </td>
                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.Name">@item.Name</p>
                            <p class="text-muted mb-0"></p>
                        </td>
                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.Code">@item.Code</p>
                        </td>

                        <td>
                            <a asp-action="Edit" asp-area="Admin" asp-controller="Category" asp-route-id="@item.Id" type="button" class="btn btn-link btn-sm btn-rounded">
                                Düzenle
                            </a>
                        </td>

                        <td>
                            <a asp-action="Delete" asp-area="Admin" asp-controller="Category" asp-route-id="@item.Id" type="button" class="btn btn-link btn-sm btn-rounded">
                                Sil
                            </a>
                        </td>
                    </tr>
                }


            </tbody>
        </table>

    </div>
</div>



