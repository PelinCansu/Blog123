@using Blog123.UI.Areas.Admin.ViewModels.RoleVMs;

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model List<RoleListVM>

<div class="row">
    <div class="col-lg-12">
        <a class="btn btn-primary" style="color:azure; font-size:larger" asp-action="Create">Yeni Rol Ekle</a>
    </div>

</div>

<br />
<div class="row">
    <div class="col-lg-12">
        <table class="table align-middle mb-0 bg-white">
            <thead class="bg-light">
                <tr>
                    <th>Rol ID</th>
                    <th>Rol Ad</th>
                    <th>Rol Düzenle</th>
                    <th>Rol Sil</th>
          

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.Id">@item.Id</p>
                            <p class="text-muted mb-0"></p>
                        </td>
                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.Name">@item.Name</p>
                            <p class="text-muted mb-0"></p>
                        </td>
                        


                        <td>
                            <a asp-action="Edit" asp-area="Admin" asp-controller="Role" asp-route-id="@item.Id" type="button" class="btn btn-link btn-sm btn-rounded">
                                Düzenle
                            </a>
                        </td>
                        
                        <td>
                            <a asp-action="Delete" asp-area="Admin" asp-controller="Role" asp-route-id="@item.Id" type="button" class="btn btn-link btn-sm btn-rounded">
                                Sil
                            </a>
                        </td>


                    </tr>
                }


            </tbody>
        </table>

    </div>
</div>


