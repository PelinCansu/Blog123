<div class="row">
    <div class="col-lg-12">
        <table class="table align-middle mb-0 bg-white">
            <thead class="bg-light">
                <tr>
                    <th>Kullanıcı ID</th>
                    <th>Kullanıcı Adı</th>
                    <th>Email</th>
                    <th>Rol Ata</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.Id">@item.Id</p>
                            <p class="text-muted mb-0"></p>
                        </td>
                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.UserName">@item.UserName</p>
                            <p class="text-muted mb-0"></p>
                        </td>

                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.Email">@item.Email</p>
                        </td>
                  
                     
                        <td>
                            <a asp-action="RoleAssign" asp-area="Admin" asp-controller="Role" asp-route-id="@item.Id" type="button" class="btn btn-link btn-sm btn-rounded">
                                Rol Ata
                            </a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>

    </div>
</div>
