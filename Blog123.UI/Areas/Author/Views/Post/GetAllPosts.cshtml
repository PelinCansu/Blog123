@using Blog123.UI.Areas.Author.ViewModels;

@{
    ViewData["Title"] = "GetAllPosts";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model List<PostListVM>
@{
    string userName = TempData["userName"] as string;
}

<div class="row">
    <div class="col-lg-12">
        
        <a class="btn btn-primary" style="color:azure; font-size:larger" asp-action="Create" asp-controller="Post" asp-area="Author" asp-route-userName="@User.Identity.Name">Yeni Gönderi Ekle</a>
                
    </div>

</div>

<br />
<div class="row">
    <div class="col-lg-12">
        <table class="table align-middle mb-0 bg-white">
            <thead class="bg-light">
                <tr>
                    <th>Gönderi ID</th>
                    <th>Gönderi Başlığı</th>
                    <th>Yazar Adı</th>
                 
                    <th>Düzenle</th>
                    <th>Sil</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.Id">@item.Id</p>
                            <p class="text-muted mb-0"></p>
                        </td>
                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.Title">@item.Title</p>
                            <p class="text-muted mb-0"></p>
                        </td>

                        
                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.AuthorID">@User.Identity.Name</p>
                        </td>
            
                        <td>
                            <a asp-action="Edit" asp-area="Author" asp-controller="Post" asp-route-id="@item.Id"  class="btn btn-link btn-sm btn-rounded">
                                Düzenle
                            </a>
                        </td>

                        <td>
                            <a asp-action="Delete" asp-area="Author" asp-controller="Post" asp-route-id="@item.Id"  class="btn btn-link btn-sm btn-rounded">
                                Sil
                            </a>
                        </td>
                    </tr>
                }


            </tbody>
        </table>

    </div>
</div>

